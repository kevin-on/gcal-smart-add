{
    "manifest_version": 3,
    "name": "Google Calendar Smart Add",
    "version": "1.0.2",
    "description": "Todoist-like natural language input for Google Calendar - highlights date tokens",
    "host_permissions": ["https://calendar.google.com/*"],
    "content_scripts": [
        {
            "matches": ["https://calendar.google.com/*"],
            "js": ["dist/content.js"],
            "css": ["dist/styles.css"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
