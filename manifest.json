{
  "manifest_version": 3,
  "name": "Smart Quick Add for Google Calendar",
  "version": "0.1.0",
  "description": "Todoist-like natural language input for Google Calendar - highlights date tokens",
  "permissions": ["storage"],
  "host_permissions": ["https://calendar.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["dist/content.js"],
      "css": ["dist/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
